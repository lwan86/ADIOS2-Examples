<?xml version="1.0"?>
<!-- Config XML file fo the
     - miniapp
     executables -->

<adios-config>

    <!--===========================================
           Configuration for the Miniapp Output 
        ===========================================-->

    <io name="MiniAppOutput">
      <engine type="ADIOS1">
		<parameter key="FlushStepsCount" value="251"/>
        </engine>

        <!-- ADIOS 1.x had no default output transport
             so we must give one here -->
        <transport type="File">
            <!-- N process to 1 file -->
            <parameter key="Library" value="MPI"/>
        </transport>
    </io>


</adios-config>
